<h2 id="books-page-search-book-title">Search Books</h2>
<form action="/books" method="GET">
    <div class="form-row">
        <div class="form-item">
            <label id="search-book-title-field-label">Title</label>
            <input id="search-book-title-field" type="text" name="title" value="<%= searchOptions.title %>">
        </div>
    </div>
    <div class="form-row">
        <div class="form-item">
            <label id="search-book-published-after-field-label">Published After</label>
            <input id="search-book-published-after-field" type="date" name="publishedAfter" value="<%= searchOptions.publishedAfter %>">
        </div>
        <div class="form-item">
            <label id="search-book-published-before-field-label">Published Before</label>
            <input id="search-book-published-before-field" type="date" name="publishedBefore" value="<%= searchOptions.publishedBefore %>">
        </div>
    </div>
    <div class="form-row form-row-end">
        <button id="search-book-search-button" class="btn btn-primary" type="submit">Search</button>
    </div>
</form>
<br>
<%- include('../partials/bookGrid', { books: books, large: true }) %> 